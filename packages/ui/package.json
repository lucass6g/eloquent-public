{
  "name": "@eloquent/ui",
  "version": "1.0.2",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "private": false,
  "files": [
    "dist",
    "tailwind.config.js",
    "postcss.config.js",
    "style"
  ],
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./tailwind": "./tailwind.config.js",
    "./postcss": "./postcss.config.js",
    "./style": "./style/styles.css"
  },
  "scripts": {
    "lint": "eslint src --cache",
    "typecheck": "tsc -b",
    "build:cjs": "tsup --format cjs --external react",
    "build:esm": "tsup --format esm --external react",
    "build": "concurrently \"npm run build:cjs\"  \"npm run build:esm\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest  --ui"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tsup": "^8.0.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "resize-observer-polyfill": "^1.5.1",
    "@types/node": "^20.11.22",
    "@types/react": "^18.2.60",
    "@types/react-dom": "^18.2.19",
    "@vitest/coverage-istanbul": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsconfig": "workspace:*",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@eloquent/react": "workspace:*",
    "@eloquent/tokens": "workspace:*",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@storybook/addon-docs": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "jsdom": "^24.0.0",
    "lucide-react": "^0.344.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
